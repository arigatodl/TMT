<Window x:Class="TMT.View.MongolianGeneratorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MongolianGeneratorView" Height="300" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" Text="{Binding Data.RawData}"/>
        <ListBox Grid.Row="1" ItemsSource="{Binding Data.Results}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Result}" Margin="0 0 10 0"/>
                        <TextBlock Text="{Binding Root}" Margin="0 0 0 0"/>
                        <Label Content="+"/>
                        <TextBlock Text="{Binding Suffix}" Margin="0 0 0 0"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button Content="Үүсгэх" Grid.Row="2" Command="{Binding Execute}"></Button>
    </Grid>
</Window>
