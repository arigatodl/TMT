<Window x:Class="TMT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.7*"/>
            <RowDefinition Height="0.3*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.25*"/>
            <ColumnDefinition Width="0.25*"/>
            <ColumnDefinition Width="0.25*"/>
            <ColumnDefinition Width="0.25*"/>
        </Grid.ColumnDefinitions>
        
        <TextBox Text="{Binding Data.RawData}" Grid.Column="0" Grid.ColumnSpan="2"/>
        <TextBox Text="{Binding Data.ExtractedData}" Grid.Column="2" Grid.ColumnSpan="2"/>
        
        <Button Command="{Binding TranslateViaText}" Grid.Column="1" Grid.Row="1" Width="50" Height="50"/>
        <Button Grid.Column="2" Grid.Row="1" Width="50" Height="50"/>
    </Grid>
</Window>
