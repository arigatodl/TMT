<Window x:Class="TMT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:TMT"
        Title="Турк Монгол орчуулгын систем" Height="350" Width="525">
    
    <Grid>
        <Grid.Resources>
            <local:BoolToVisConverter x:Key="BoolToVisible"/>
            <Image x:Key="Accept" Source="..\Resources\Accept.png"/>
        </Grid.Resources>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="0.7*"/>
            <RowDefinition Height="0.3*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.25*"/>
            <ColumnDefinition Width="0.25*"/>
            <ColumnDefinition Width="0.25*"/>
            <ColumnDefinition Width="0.25*"/>
        </Grid.ColumnDefinitions>
        
        <TextBox Text="{Binding Data}"  Grid.Column="0" Grid.ColumnSpan="2" TextWrapping="wrap" VerticalScrollBarVisibility="auto"/>
        <Grid Grid.Column="2" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height =" 0.8*"/>
                <RowDefinition Height =" 0.2*"/>
            </Grid.RowDefinitions>
            <ItemsControl ItemsSource="{Binding Dictionaries}" Grid.Row ="0">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBox Text="{Binding TLWord}" ToolTip ="{Binding Suffixes, UpdateSourceTrigger=PropertyChanged}">

                        </TextBox>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Button Content="{StaticResource Accept}" Grid.Row ="1" Width ="30" Height = "30" Visibility="{Binding ChangeState, Converter={StaticResource BoolToVisible}}"/>
        </Grid>

        <Button Content="Text" Command="{Binding TranslateViaText}" Grid.Column="1" Grid.Row="1" Width="50" Height="50"/>
        <Button Content="Voice" Command="{Binding TranslateViaVoice}" Grid.Column="2" Grid.Row="1" Width="50" Height="50"/>
        
    </Grid>
</Window>
